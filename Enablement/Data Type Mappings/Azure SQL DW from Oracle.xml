<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<data_type_mapping_set name="Azure SQL DW from Oracle" xsi:schemaLocation="http://www.wherescape.com/xml/red ./Data%20Type%20Mapping.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.wherescape.com/xml/red">
	<mapping_set_description>Mappings from Oracle into Azure SQL DW</mapping_set_description>
	<mapping_set_null_policy>AllowNulls</mapping_set_null_policy>
	<data_type_mapping match_data_type="date" output_data_type="date">
		<transform_code>TO_CHAR(%column_name,'YYYY-MM-DD')</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="timestamp" output_data_type="datetime">
		<transform_code>TO_CHAR(%column_name,'YYYY-MM-DD HH24:MI:SS')</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="varchar2" output_data_type="varchar(%precision)">
		<match_parameters>
			<match_precision>1-8000</match_precision>
		</match_parameters>
	</data_type_mapping>
	<data_type_mapping match_data_type="varchar2" output_data_type="varchar(8000)">
		<match_parameters>
			<match_precision>8001-*</match_precision>
		</match_parameters>
		<transform_code>SUBSTR(%column_name,1,8000)</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="nvarchar2" output_data_type="nvarchar(%precision)">
		<match_parameters>
			<match_precision>1-4000</match_precision>
		</match_parameters>
	</data_type_mapping>
	<data_type_mapping match_data_type="nvarchar2" output_data_type="nvarchar(4000)">
		<match_parameters>
			<match_precision>4001-*</match_precision>
		</match_parameters>
		<transform_code>SUBSTR(%column_name,1,4000)</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="char" output_data_type="varchar(%precision)">
		<match_parameters>
			<match_precision>1-8000</match_precision>
		</match_parameters>
		<transform_code>TRIM(%column_name)</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="char" output_data_type="varchar(8000)">
		<match_parameters>
			<match_precision>8001-*</match_precision>
		</match_parameters>
		<transform_code>SUBSTR(TRIM(%column_name),1,8000)</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="nchar" output_data_type="nvarchar(%precision)">
		<match_parameters>
			<match_precision>1-4000</match_precision>
		</match_parameters>
		<transform_code>TRIM(%column_name)</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="nchar" output_data_type="nvarchar(4000)">
		<match_parameters>
			<match_precision>4001-*</match_precision>
		</match_parameters>
		<transform_code>SUBSTR(TRIM(%column_name),1,4000)</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="number" output_data_type="decimal(%precision)">
		<match_parameters>
			<match_precision>1-38</match_precision>
			<match_scale>0</match_scale>
		</match_parameters>
	</data_type_mapping>
	<data_type_mapping match_data_type="number" output_data_type="decimal(%precision,%scale)">
		<match_parameters>
			<match_precision>1-38</match_precision>
			<match_scale>1-38</match_scale>
		</match_parameters>
	</data_type_mapping>
	<data_type_mapping match_data_type="number" output_data_type="decimal(38)">
		<match_parameters>
			<match_precision>39-*</match_precision>
			<match_scale>0</match_scale>
		</match_parameters>
	</data_type_mapping>
	<data_type_mapping match_data_type="number" output_data_type="decimal(38,%scale)">
		<match_parameters>
			<match_precision>39-*</match_precision>
			<match_scale>1-38</match_scale>
		</match_parameters>
	</data_type_mapping>
	<data_type_mapping match_data_type="number" output_data_type="decimal(38,38)">
		<match_parameters>
			<match_precision>39-*</match_precision>
			<match_scale>39-*</match_scale>
		</match_parameters>
	</data_type_mapping>
	<data_type_mapping match_data_type="float" output_data_type="decimal(38,2)"></data_type_mapping>
	<data_type_mapping match_data_type="binary_float" output_data_type="real"></data_type_mapping>
	<data_type_mapping match_data_type="binary_double" output_data_type="float"></data_type_mapping>
	<data_type_mapping match_data_type="raw" output_data_type="varbinary(%precision)"></data_type_mapping>
	<data_type_mapping match_data_type="long raw" output_data_type="varbinary(2000)">
		<transform_code>CAST(SUBSTR(%column_name,1,2000) AS RAW)</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="clob" output_data_type="varchar(4000)">
		<transform_code>CAST(SUBSTR(%column_name,1,4000) AS VARCHAR2(4000))</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="nclob" output_data_type="nvarchar(4000)">
		<transform_code>CAST(SUBSTR(%column_name,1,4000) AS NVARCHAR2(4000))</transform_code>
	</data_type_mapping>
	<data_type_mapping match_data_type="rowid" output_data_type="nvarchar(4000)"></data_type_mapping>
	<data_type_mapping match_data_type="urowid" output_data_type="nvarchar(%precision)"></data_type_mapping>
</data_type_mapping_set>
